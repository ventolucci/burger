<div class="container">
    <div class="jumbotron">
      <div class="row">
          <div class="col-md-12">
            <div>
                <h1>Eat that burger!</h1>
            </div>
            <form class="form-inline" id="create-form">

                <div class="form-group">
                    <label for="burg"></label>
                    <input type="text" class="form-control" id="burg">
                </div>
                <button type="submit" class="btn btn-lg">Create a Burger</button>
            </form>
          </div>
      </div>

        <div class="row">
            <div class="col-md-6" id="to-eat">
                <h2 class="text-center special">burgers to eat!</h2>
                    <ul>
                        {{#each burgers}} {{#unless devoured}}
                        <button type="submit" id="change-devour" class="btn btn-success btn-devour" data-id="{{id}}" data-newdevour="{{devour}}">Devoured</button>
                        <p class="para"> {{burger_name}} </p>
                        
                        
                        {{/unless}} {{/each}}
                    </ul>
            </div>
                
            <div class="col-md-6" id="eaten">
                    <h2 class="text-center special">Devoute!</h2>
                    <ul class="text-center">

                        {{#each burgers}} {{#if devoured}}
                        <p class="para" id="show-me"> {{this.burger_name}}</p>
                        {{/if}} {{/each}}

                    </ul>
                </div>
            </div>
        </div>
</div>



    

